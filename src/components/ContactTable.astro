---
export interface Props {
	exec: {
        role: string;
        name: string;
        email: string;
    }[];
}

const { exec } = Astro.props;
---

<div class="contact-table">
    <h2>Contact the KCSU</h2>
    <table>
        <thead>
            <tr>
                <th>Name(s)</th>
                <th>Role</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {exec.map((exec) => (
                <tr>
                    <td>{exec.name}</td>
                    <td>{exec.role}</td>
                    <td><a href={`mailto:${exec.email}`}>{exec.email}</a></td>
                </tr>
            ))}
        </tbody>
    </table>
</div>

<style>
    .contact-table {
        color: #111;
        padding: 10px 0;
        /* padding-top: 10px; */
        background-color: white;
		border-radius: 0.6rem;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    }

    h2 {
        margin: 0 0 10px 0;
        padding: 0 20px;
        font-size: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        padding: 0.5rem 20px;
        border-bottom: 1px solid #ddd;
    }

    td {
        padding: 0.5rem 20px;
    }

    tr {
        transition: background-color 0.1s;
    }

    a {
        color: rgb(var(--accent));
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }
</style>