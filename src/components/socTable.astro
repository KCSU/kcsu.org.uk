---
import socInfo from "../data/socInfo.json"
---

<div class="contact-table">
    <table>
        <thead>
            <tr>
                <th>Society</th>
                <th>Owners</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            {socInfo.map((m) => (
                <tr>
                    <td>{m.Society}</td>
                    <td>{m.Owner}</td>
                    <td><a href={`mailto:${m.email1}`}>{m.email1}</a> <a href={`mailto:${m.email2}`}>{m.email2}</a></td>
                </tr>
            ))}
        </tbody>
    </table>
</div>

<style>
    .contact-table {
        color: white;
        padding: 10px 0;
        /* padding-top: 10px; */
        
        overflow-x: auto;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 1), 0 2px 4px -2px rgba(0, 0, 0, 1);
    }

    h2 {
        margin: 0 0 10px 0;
        padding: 0 20px;
        font-size: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        padding: 0.5rem 20px;
        border-bottom: 1px solid #184862;
    }

    td {
        padding: 0.5rem 20px;
    }

    tr {
        transition: background-color 0.1s;
    }

    a {
        color: rgb(var(--accent));
    }

    tbody tr:hover {
        opacity: .6;
    }
</style>