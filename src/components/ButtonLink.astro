---
export interface Props {
    href: string;
    imgname:string;
    arrowcol:string;
}

const {href,imgname,arrowcol} = Astro.props;

---
<a class="link" href={href} style={`color:${arrowcol}`}>  
    <div>   
        <img
        src ={imgname}
        width="100%"
        height="100%" 
   
        />
    </div>    
    <div class="triangle"></div>
</a>

<style>
    .triangle {
        
        border-right: 5px solid; 
        border-bottom: 5px solid;
        height: 20px;
        width: 20px;
        transform: rotate(-45deg);
        float:left;

    }
    a.link {
        display: grid;
        align-items: center; 
        grid-template-columns: 20fr 1fr  3fr;
        text-decoration: none;
        border-radius: 4px;
        margin-top: 15px;
        transition: all 0.2s;
        color: white;
        overflow: auto;
    }
    a.link:hover {
        opacity: .4;
    }
</style>